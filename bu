#!/bin/sh

set -e -u

final=false

for arg ; do
	case "$arg" in
		-f)
			final=true
			;;
		*)
			echo >&2 "invalid arg"
			exit 1
			;;
	esac
done

mnt_dir=/mnt/bu

cleanup() {
	umount "$mnt_dir"
	rmdir "$mnt_dir"
	if $final ; then
		mount -o rw,remount /home
	fi
	cryptsetup close bu
}

trap cleanup EXIT

mkdir -p "$mnt_dir"

cryptsetup --type=tcrypt open /dev/sdc1 bu
mount /dev/mapper/bu "$mnt_dir"

if $final ; then
	mount -o ro,remount /home
fi

rsync -av --progress --fuzzy --delete-before --ignore-errors \
  /home/ "$mnt_dir"
