#!/bin/bash
# Opens some specified ($1) number of pdfs from ~/ela sorted by modification time.
# Opens one pdf by default.

dir="$HOME/ela"
pdf_viewer="zathura"

num=${1:-1}

files=$(ls -t ${dir}/*.pdf 2>/dev/null | head -n $num)
if [[ $files == "" ]] ; then
	echo No pdf files found.
else
	$pdf_viewer --fork $files;
fi
