#!/bin/bash
# I like to start virtual machines from a central location.

# Qemu.
default_system() { sudo -g disk qemu-system-x86_64 "$@"; }
default_backend=(-enable-kvm)

# Core hardware.
default_cpu=(-smp 8,cores=4,threads=2,sockets=1)
default_memory=(-m 6G)

# Display.
#default_display=(-vga std)
default_display=(-vga qxl -spice port=5900,addr=127.0.0.1,disable-ticketing)

# Disks.
default_sdb=(-drive file=/dev/sdb,cache=none,if=virtio)

# Network.
default_network=(-netdev bridge,id=bridge,br=br0
                 -device virtio-net,netdev=bridge)

case "$1" in
	# Arch Install.
	arch*)
		# No `default_display`.
		#   A curses display is used instead.
		default_system \
		  "${default_backend[@]}" \
		  "${default_cpu[@]}" \
		  "${default_memory[@]}" \
		  -vga std -display curses \
		  "${default_sdb[@]}" \
		  "${default_network[@]}" \
		  "${@:2}" \
		  "$HOME/vm/archinstall/archinstall.iso"
		;;

	# BlackArch.
	blackarch)
		default_system \
		  "${default_backend[@]}" \
		  "${default_cpu[@]}" \
		  "${default_memory[@]}" \
		  "${default_display[@]}" \
		  "${default_sdb[@]}" \
		  "${default_network[@]}" \
		  "${@:2}" \
		  "$HOME/vm/blackarch/test.iso"
		;;

	# Metasploitable.
	meta*)
		# No `default_sdb`.
		#   Not necessary.
		# No `default_network`.
		#   Not bridged to any host interfaces for security reasons.
		# No `default_display`.
		#   A curses display is used instead.
		tap=metasploitable 
		sudo ip tuntap add dev $tap mode tap
		sudo ip link set dev $tap up
		sudo ip route add 192.168.1.117 dev metasploitable
		trap "sudo ip tuntap del dev $tap mode tap" EXIT

		default_system \
		  "${default_backend[@]}" \
		  "${default_cpu[@]}" \
		  "${default_memory[@]}" \
		  -netdev tap,id=tap,ifname=$tap,script=no,downscript=no \
                  -device virtio-net,netdev=tap \
		  -vga std -display curses \
		  "${@:2}" \
		  "$HOME/vm/metasploitable/metasploitable.img"
		;;

	# Tails.
	tail*)
		# All defaults.
		# Plus `-no-reboot` and no `-no-shutdown`.
		default_system \
		  "${default_backend[@]}" \
		  "${default_cpu[@]}" \
		  "${default_memory[@]}" \
		  "${default_display[@]}" \
		  "${default_sdb[@]}" \
		  "${default_network[@]}" \
		  "${@:2}" \
		  -no-reboot -no-shutdown \
		  -boot order=d \
		  -cdrom "$HOME/vm/tails/tails.iso"
		  ;;

	# XP.
	xp-pop)
		# No `default_cpu`.
		#   Only one core is used.
		# No `default_memory`.
		#   Only 1G is necessary.
		# No `default_sdb`.
		#   No need.
		# No `default_network`.
		#   No network connection for security reasons.
		# TODO: test this with SPICE.
		default_system \
		  "${default_backend[@]}" \
		  -m 1G \
		  "${default_display[@]}" \
		  "$@"
		;;

	*)
		# All defaults.
		default_system \
		  "${default_backend[@]}" \
		  "${default_cpu[@]}" \
		  "${default_memory[@]}" \
		  "${default_display[@]}" \
		  "${default_sdb[@]}" \
		  "${default_network[@]}" \
		  "$@"
		  ;;
esac
